	<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.js"></script>
	<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
	<div id="top">
		<h1>Shareui 字体图标列表</h1>
		<div class="text-center">
			<input type="text" class="search form-control" placeholder="输入类名/中文名称/codepoint查找" />
		</div>
	</div>
	<div id="content">
		{{#each types}}
		<h2 class="page-header">{{type}}</h2>
		{{!--
		<table class="table table-hover table-bordered  table-sm table-striped">
			<thead>
				<tr>
					<th scope="col">图标</th>
					<th scope="col">类名</th>
					<th scope="col">中文名称</th>
					<th scope="col">codepoint</th>
					<th scope="col">复制codepoint</th>
				</tr>
			</thead>
			<tbody>
				{{#each list}}
				<tr>
					<td>
						<i class="{{removePeriods ../../baseSelector}} {{../../classPrefix}}{{removeCh this}}"></i>
					</td>
					<td>{{removePeriods ../../baseSelector}} {{../../classPrefix}}{{removeCh this}}</td>
					<td>{{getCh this}}</td>
					<td>
						<input class="codepoint" type="text" value="{{getCodepoint this ../../codepoints}}" readonly/>
					</td>
					<td>
						<a href="javascript:;" class="copy">复制</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table> --}}
		<div class="row fontawesome-icon-list">
			{{#each list}}
			<div class="fa-hover col-md-3 col-sm-4" data-toggle="tooltip" data-placement="top" title="点击复制">
				<span>
					<i class="{{removePeriods ../../baseSelector}} {{../../classPrefix}}{{removeCh this}}"></i>
				</span>
				<span>{{removePeriods ../../baseSelector}} {{../../classPrefix}}{{removeCh this}}</span>
				<span>{{getCh this}}</span>
				<span class="codepoint">{{getCodepoint this ../../codepoints}}</span>
				<span class="content" style="display: none;">{{{getConent this ../../codepoints}}}</span>
				{{!-- <span>
					<a href="javascript:;" class="copy">复制</a>
				</span> --}}
			</div>
			{{/each}}
		</div>
		{{/each}}
	</div>
	<div class="alert alert-success" role="alert">
		复制成功！
	</div>

	<script>
		function fallbackCopyTextToClipboard(text) {
			var textArea = document.createElement("textarea");
			textArea.value = text;
			document.body.appendChild(textArea);
			textArea.focus();
			textArea.select();

			try {
				var successful = document.execCommand('copy');
				var msg = successful ? 'successful' : 'unsuccessful';
				console.log('Fallback: Copying text command was ' + msg);
			} catch (err) {
				console.error('Fallback: Oops, unable to copy', err);
			}

			document.body.removeChild(textArea);
		}
		function copyTextToClipboard(text) {
			if (!navigator.clipboard) {
				fallbackCopyTextToClipboard(text);
				return;
			}
			navigator.clipboard.writeText(text).then(function () {
				console.log('Async: Copying to clipboard was successful!');
			}, function (err) {
				console.error('Async: Could not copy text: ', err);
			});
		}
		$(function () {
			/** $('.copy').on('click', function (e) {
				e.preventDefault();
				var $codepoint = $.trim($(this).parent().siblings('.codepoint').html());
				copyTextToClipboard($codepoint);
				$('.alert').show();
				setTimeout(function () {
					$('.alert').hide();
				}, 2000);
			}); **/

			$('.fa-hover').on('click', function(){
				var $codepoint = $.trim($(this).find('.content').html());
				copyTextToClipboard($codepoint);

				$(this).attr('title', '复制成功！').tooltip('fixTitle').tooltip('show');
			});

			$('.search').on('input porpertychange', function (e) {
				var value = $.trim($(this).val());

				$('.fa-hover').each(function () {
						var match = false;
					$(this).find('span').each(function () {
						var text = $.trim($(this).html());

						if (text.indexOf(value) !== -1) {
							match = true;
							return false;
						}
					});

						if (match) {
							$(this).show();
						} else {
							$(this).hide();
						}
				});
			});

				$(".fa-hover").hover(function(){
					$(this).attr('title', '点击复制').tooltip('fixTitle').tooltip('show');
				});
		})
	</script>
</body>

</html>